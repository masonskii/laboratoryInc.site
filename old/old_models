class PersonBirthday(models.Model):
    """
    Model table PersonBirthday in project db
        Example:
    SET:
        var = PersonBirthday()
        var.birthday = object
        var.save()
    ----------------------------
    GET:
        var = PersonBirthday.objects.get(id = object)
    """
    birthday_id = models.AutoField(primary_key=True)
    birthday = models.DateField(null=True, blank=True)


