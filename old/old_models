        var.surname = object
        var.save()
    ----------------------------
    GET:
        var = PersonSurname.objects.get(id = object)
    """
    surname_id = models.AutoField(primary_key=True)
    surname = models.CharField(max_length=30, null=True, blank=True)


class PersonNdName(models.Model):
    """
